@using SistemaMotocicletas.Models;
@model List<Taller>
@{
    ViewData["title"] = "Index";

}


@if(Model.Count !=0){

    <table class="table">
  <thead>
    <tr>
      <th scope="col">Id</th>
      <th scope="col">ZonaTaller</th>
      <th scope="col">DireccionTaller</th>
      <th scope="col">NombreTaller</th>
     
    </tr>
  </thead>
  <tbody>
        @foreach(var t in Model)
        {
            <tr>
                <td>@t.Id</td>
                <td>@t.ZonaTaller</td>
                <td>@t.DireccionTaller</td>
                <td>@t.NombreTaller</td>
             
                 <td>
                        <a class="btn btn-primary" asp-area="" asp-controller="Store" asp-action="Update" asp-route-id="@t.Id"
                         asp-route-name="@t.ZonaTaller"
                         asp-route-adress="@t.NombreTaller"> Editar</a>
                    </td>
                    <td>
                        <a class="btn btn-danger" asp-area="" asp-controller="Store" asp-action="Delete" asp-route-id="@t.Id"
                        asp-route-name="@t.ZonaTaller"
                        asp-route-adress="@t.NombreTaller"> Eliminar</a>
                     </td>

            </tr>


        }
  </tbody>
</table>
 <a class="btn btn-primary" asp-area="" asp-controller="Taller" asp-action="Create">Crear Taller</a>
}
else{
    <div class="card">
  <div class="card-body">
        Aun no se encuentran datos registrados 
  </div>
</div>

}
